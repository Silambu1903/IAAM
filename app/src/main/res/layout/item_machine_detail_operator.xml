<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/grid_item_border"
        android:orientation="horizontal"
        android:padding="0dp"
        android:layout_below="@+id/txt_md_head_utilization"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/txt_MD_operator_FDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxWidth="20dp"
            android:singleLine="true"
            android:text="From Date"
            android:tooltipText="From Date"
            android:textAlignment="center"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/txt_MD_operator_TDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:ellipsize="middle"
            android:maxWidth="25dp"
            android:singleLine="true"
            android:text="To Date"
            android:tooltipText="To Date"
            android:textAlignment="center"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/txt_MD_operator_EmpCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:ellipsize="middle"
            android:maxWidth="25dp"
            android:singleLine="true"
            android:text="Employee code"
            android:tooltipText="Employee code"
            android:textAlignment="center"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/txt_MD_operator_operator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:ellipsize="middle"
            android:maxWidth="20dp"
            android:singleLine="true"
            android:text="Operator"
            android:tooltipText="Operator"
            android:textAlignment="center"
            android:textSize="15sp" />

    </LinearLayout>
</layout>