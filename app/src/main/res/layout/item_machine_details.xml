<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:id="@+id/linearlay_MDs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/grid_item_border"
        android:foreground="?attr/selectableItemBackground"
        android:orientation="horizontal"
        android:padding="0dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/txt_MDs_sn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxWidth="20dp"
            android:singleLine="true"
            android:text="S N0"
            android:tooltipText="SNO"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/txt_MDs_make"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:ellipsize="middle"
            android:maxWidth="25dp"
            android:singleLine="true"
            android:text="Make"
            android:tooltipText="Make"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/txt_MDs_model"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:ellipsize="middle"
            android:maxWidth="25dp"
            android:singleLine="true"
            android:tooltipText="Model"
            android:text="Model"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/txt_MDs_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:ellipsize="middle"
            android:maxWidth="20dp"
            android:singleLine="true"
            android:tooltipText="Status"
            android:text="Statuasdasdasdasdasds"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/txt_MDs_operator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:maxWidth="30dp"
            android:singleLine="true"
            android:text="Operator"
            android:tooltipText="Operator"
            android:textAlignment="center" />


    </LinearLayout>


</layout>