<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/grid_item_border"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_EmpPro_Skill_MachineCode"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:text="Machine Code"
            android:tooltipText="Machine Code"
            android:textAlignment="center"
            android:singleLine="true"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/txt_EmpPro_Skill_OperationCode"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:text="Operatation Code"
            android:tooltipText="Operatation Code"
            android:textAlignment="center"
            android:singleLine="true"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/txt_EmpPro_Skill_OperationName"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:text="Operation Name"
            android:tooltipText="Operation Name"
            android:singleLine="true"
            android:textAlignment="center"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/txt_EmpPro_Skill_needleRun"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:tooltipText="Needle Run"
            android:singleLine="true"
            android:text="Needle Run %"
            android:textAlignment="center"
            android:textSize="15sp" />
    </LinearLayout>
</layout>