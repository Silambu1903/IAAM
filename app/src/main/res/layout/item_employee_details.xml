<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/grid_item_border"
        android:orientation="horizontal"
        android:foreground="?attr/selectableItemBackground">

        <TextView
            android:id="@+id/txt_empDetails_empNo"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:singleLine="true"
            android:text="Emp No"
            android:tooltipText="Emp No"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/txt_empDetails_operator"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:text="Operator"
            android:tooltipText="Operator"
            android:singleLine="true"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/txt_empDetails_status"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:text="Status"
            android:tooltipText="Status"
            android:singleLine="true"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/txt_empDetails_site"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:text="Site"
            android:tooltipText="Site"
            android:singleLine="true"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/txt_empDetails_lineNo"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:text="Line No"
            android:tooltipText="Line No"
            android:singleLine="true"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/txt_empDetails_machineNo"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Machine No"
            android:tooltipText="Machine No"
            android:singleLine="true"
            android:textAlignment="center" />

    </LinearLayout>

</layout>