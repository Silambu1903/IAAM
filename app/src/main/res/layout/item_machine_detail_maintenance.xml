<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/linearlay_MDs"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/grid_item_border"
    android:orientation="horizontal"
    android:padding="0dp"
    android:layout_below="@+id/txt_md_head_utilization"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="10dp">

    <TextView
        android:id="@+id/txt_md__main_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="1"
        android:ellipsize="end"
        android:maxWidth="20dp"
        android:singleLine="true"
        android:text="Date"
        android:tooltipText="Date"
        android:textAlignment="center"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/txt_md__main_issueID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:layout_weight="1"
        android:ellipsize="middle"
        android:maxWidth="25dp"
        android:singleLine="true"
        android:text="Issue ID"
        android:tooltipText="Issue ID"
        android:textAlignment="center"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/txt_md__main_reasonCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:layout_weight="1"
        android:ellipsize="middle"
        android:maxWidth="25dp"
        android:singleLine="true"
        android:text="Reason Code"
        android:tooltipText="Reason Code"
        android:textAlignment="center"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/txt_md__main_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:layout_weight="1"
        android:ellipsize="middle"
        android:maxWidth="20dp"
        android:singleLine="true"
        android:text="Status"
        android:tooltipText="status"
        android:textAlignment="center"
        android:textSize="15sp" />
    <TextView
        android:id="@+id/txt_md__main_assignedTo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:layout_weight="1"
        android:ellipsize="middle"
        android:maxWidth="20dp"
        android:singleLine="true"
        android:text="Assigned To"
        android:tooltipText="Assigned To"
        android:textAlignment="center"
        android:textSize="15sp" />


</LinearLayout>