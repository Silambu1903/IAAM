<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    app:cardBackgroundColor="@color/colorInvenItem">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/txtMacno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:text="12312"
            android:textColor="@color/colorBlack"
            android:textSize="18sp"
            android:tooltipText="Machine SAP ID" />

        <TextView
            android:id="@+id/txtMakeModel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtMacno"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:text="USHA - Stinger"
            android:textColor="@color/colorBlack"
            android:textSize="16sp"
            android:tooltipText="Machine Make &amp; Model" />

        <TextView
            android:id="@+id/txtDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtMakeModel"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:text="Jean sticher"
            android:textSize="14sp"
            android:tooltipText="Machine description" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>